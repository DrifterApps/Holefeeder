<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>netcoreapp3.1</TargetFramework>
        <RootNamespace>DrifterApps.Holefeeder.Hosting.Holefeeder.UI</RootNamespace>
        <LangVersion>default</LangVersion>
    </PropertyGroup>

    <ItemGroup>
      <Folder Include="ClientApp" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.AspNetCore.SpaServices" Version="3.1.9" />
      <PackageReference Include="Microsoft.AspNetCore.SpaServices.Extensions" Version="3.1.9" />
    </ItemGroup>

    <Target Name="MyPreCompileTarget" BeforeTargets="Build">
        <Exec Command="npm install" WorkingDirectory="ClientApp/" />
        <Exec Command="ng build" WorkingDirectory="ClientApp/" />
    </Target>
    
</Project>
